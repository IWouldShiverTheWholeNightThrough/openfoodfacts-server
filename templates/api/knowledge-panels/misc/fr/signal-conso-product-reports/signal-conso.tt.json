{
    "type": "card",
    "expanded": true,
    "topics": [
        "misc"
    ],
    "title_element": {
        "title": "[% edq(lang('report-an-issue')) %]",
        "subtitle": "[% edq(lang('report-an-issue-to-x')) %]", // with {service}=signalconso
        "icon_url": "[% static_subdomain %]/images/icons/dist/signalconso.svg",
    },    
    "elements": [
        [% IF panels.signalconso.defined %]
        {
            "element_type": "panel",
            "panel_element": {
                "panel_id": "signalconso",
            },
        },
        [% END %]

        [% IF options.knowledge_panels_client == 'web' %]
        "text_element": {
            "type": "quote",
            "html": `
            [% edq(lang('data-quality-issue')) %]
            // This is not meant to report data issues related to Open Food Facts. In that case, you can correct the product yourself, add newer photos or contact us at contact@openfoodfacts.org

            [% edq(lang('signal-conso-explanation')) %]
            // If you have encountered a problem with this product, such as non-compliant labeling, expired product still being sold, presence of foreign objects, etc., you can report it both to the company and the fraud repression authorities through SignalConso.

            [% edq(lang('what-is-signal-conso')) %]
            // SignalConso is a tool provided by the French General Directorate for Competition, Consumer Affairs, and Fraud Control (DGCCRF).

            [% edq(lang('country-disclaimer-coverage-product-report')) %]
            // Please note that reports will only be treated for products sold in {country}.

            [% edq(lang('country-disclaimer-coverage-signal-conso')) %]
            // Products sold outside France, or French products sold abroad are not covered by SignalConso.

            `, // What about concatenating the text here?
            "source_text": "Report an issue with this product to SignalConso",
            "source_url": "https://signal.conso.gouv.fr/fr/alimentaire-codebarres/faire-un-signalement?gtin=[% code %]", // with code= product.code
            "source_language": "fr",
        },
       
            
        
        [% ELSE %]

        [% END %]
    ],
}

            [% edq(lang('report-an-issue-to-x')) %]
            // Report an issue with this product to {service}
            [% edq(lang('report-an-issue')) %]
